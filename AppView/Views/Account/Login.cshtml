@model AppData.Account

@{
    ViewData["Title"] = "Đăng nhập";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (TempData["NotificationFail"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["NotificationFail"]
    </div>
}
@if (TempData["NotificationSuccess"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["NotificationSuccess"]
    </div>
}

<div class="text-center col-md-12">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h1 class="display-4">Đăng nhập</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Login" class="align-items-center">
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Tên tài khoản</label>
                    <input asp-for="Username" type="text" class="form-control text-center" id="Username">
                    <span asp-validation-for="Username" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control text-center" id="Password">
                    <span asp-validation-for="Password" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <button type="submit" value="Login" class="btn btn-primary">Đăng nhập!</button>
                    <a asp-action="Signup" class="btn btn-secondary">Đăng ký</a>
                </div>
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>

@model IEnumerable<AppData.BillDetails>

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<h1>Chi tiết hóa đơn</h1>
<p style="font-size:x-small">ID HĐ: @ViewData["BillID"]</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Tiêu đề
            </th>
            <th>
                Số lượng mua
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Tổng
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(item.Book.Title)
            </td>
            <td>
                @(item.Quantity)
            </td>
            <td>
                @(item.Price)
            </td>
            <td class="TotalTally">
                @(item.Quantity * item.Price)
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">
                Tổng tất cả
            </th>
            <th id="TotalPrice">
                0
            </th>
        </tr>
    </tfoot>
</table>
